{
  "name": "signer-api",
  "version": "1.0.0",
  "description": "Enables sBTC Signer Dashboard app",
  "main": "dist/src/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/app.js",
    "start-dev": "NODE_ENV=development tsc && NODE_ENV=development node dist/src/app.js",
    "start-stag": "NODE_ENV=staging tsc && NODE_ENV=staging node dist/src/app.js",
    "start-prod": "NODE_ENV=production tsc && NODE_ENV=production node dist/src/app.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "sim": "concurrently \"NODE_ENV=simnet nodemon \" \"NODE_ENV=simnet nodemon -x tsoa spec\"",
    "dev": "concurrently \"NODE_ENV=test nodemon \" \"NODE_ENV=test nodemon -x tsoa spec\"",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node-cron": "^3.0.7",
    "@types/node-fetch": "^2.6.2",
    "@types/node-schedule": "^2.1.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1",
    "vitest-fetch-mock": "^0.2.2"
  },
  "dependencies": {
    "@noble/curves": "^1.0.0",
    "@noble/secp256k1": "^2.0.0",
    "@scure/base": "^1.1.1",
    "@scure/bip32": "^1.1.0",
    "@scure/btc-signer": "^0.5.0",
    "@stacks/encryption": "^6.2.0",
    "@vitest/coverage-c8": "^0.29.1",
    "body-parser": "^1.20.1",
    "c32check": "^2.0.0",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "jsontokens": "^4.0.1",
    "micro-stacks": "^1.1.4",
    "mongodb": "^5.0.1",
    "mongoose": "^6.9.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.6.9",
    "sbtc-bridge-lib": "^1.0.68",
    "swagger-ui-express": "^4.6.3",
    "tsoa": "^5.1.1",
    "uninstall": "^0.0.0",
    "ws": "^8.13.0"
  }
}
